{
  "compilerOptions": {
    "newLine": "lf",
    "charset": "utf8",
    "declaration": false,
    "sourceMap": false,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": false,
    "baseUrl": "./",
    "moduleResolution": "Node",
    "alwaysStrict":  true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}

